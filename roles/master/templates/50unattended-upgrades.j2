Unattended-Upgrade::Allowed-Origins {
        "${distro_id}:${distro_codename}";
{% for repo in origins %}
        "${distro_id}:${distro_codename}-{{ repo }}";
{% endfor %} 
};

// List of packages to not update (regexp are supported)
Unattended-Upgrade::Package-Blacklist {
{% for package in blacklist %}
        "{{ package }}";
{% endfor %} 
};

Unattended-Upgrade::DevRelease "{{ DevRelease | default("false") }}";
Unattended-Upgrade::AutoFixInterruptedDpkg "{{ AutoFixInterruptedDpkg | default("false") }}";
Unattended-Upgrade::MinimalSteps "{{ MinimalSteps | default("false") }}";
Unattended-Upgrade::InstallOnShutdown "{{ InstallOnShutdown | default("false") }}";
Unattended-Upgrade::Remove-Unused-Dependencies "{{ Remove_Unused_Dependencies | default("true") }}";
Unattended-Upgrade::Automatic-Reboot "{{ Automatic_Reboot | default("false") }}";
