global_defs {
    router_id LVS_DEVEL
}
vrrp_script check_apiserver {
  script "/etc/keepalived/check_apiserver.sh"
  interval 3
  weight -2
  fall 10
  rise 2
}

{% for host in groups['masters'] %}
vrrp_instance {{ host }} {
{% if  groups['masters'].index(host) == 0 %}
    state MASTER
{% else %}
    state BACKUP
{% endif %}
    interface {{ private_interface }}
    virtual_router_id 51
    priority {{ 100 + groups['masters'].index(host) }}
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_auth_pass }}
    }

    mcast_src_ip {{ hostvars[host]['private_ip'] }}

    virtual_ipaddress {
        {{ api_loadbalancer_ip }}
    }
    track_script {
        check_apiserver
    }
}
{% endfor %}
